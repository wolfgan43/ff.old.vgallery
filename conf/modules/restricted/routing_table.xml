<?xml version="1.0" encoding="utf-8"?>
<configdata>
    <rule>
        <priority>HIGH</priority>
        <source>^/admin(.*)</source>
        <destination>
            <module>restricted</module>
            <url>/layout$0</url>
        </destination>
        <process_next />
        <accept_path_info />
        <reverse>/admin</reverse>
    </rule>
    <rule>
        <priority>HIGH</priority>
        <source>^/restricted(.*)</source>
        <destination>
            <module>restricted</module>
            <url>/layout$0</url>
        </destination>
        <process_next />
        <accept_path_info />
        <reverse>/restricted</reverse>
    </rule>
</configdata>