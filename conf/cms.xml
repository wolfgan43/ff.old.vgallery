        <SEARCH_VGALLERY_LIMIT extended_type="CheckGroup" label="Vgallery Limit" value="null" source_SQL = "
			SELECT vgallery.name
				, vgallery.name
			FROM vgallery
				INNER JOIN vgallery_nodes ON vgallery_nodes.ID_vgallery = vgallery.ID
					AND vgallery_nodes.parent = '/' AND vgallery_nodes.name = vgallery.name
			WHERE vgallery.public = 0
				AND vgallery_nodes.visible > 0
			ORDER BY vgallery.name
		" />

