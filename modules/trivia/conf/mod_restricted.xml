<configdata>
	<menu>
		<trivia path="/restricted/trivia" label="_trivia" redir="/restricted/trivia/question">
			<achievement path="/restricted/trivia/achievement" label="_trivia_achievement" />
            <question path="/restricted/trivia/question" label="_trivia_question" />
