	<settings>
		<trivia-general label="trivia-general">
			<MOD_TRIVIA_GROUP_ADMIN label="Group ADMIN" default="trivia-admin" required="true" extended_type="Selection" source_SQL = "
				(
					SELECT 
						[CM_TABLE_PREFIX]mod_security_groups.name AS ID
						, [CM_TABLE_PREFIX]mod_security_groups.name AS name
					FROM 
						[CM_TABLE_PREFIX]mod_security_groups
				)
			" />
			<MOD_TRIVIA_GROUP_USER label="Group user" default="trivia-user" required="true" extended_type="Selection" source_SQL = "
				(
					SELECT 
						[CM_TABLE_PREFIX]mod_security_groups.name AS ID
						, [CM_TABLE_PREFIX]mod_security_groups.name AS name
					FROM 
						[CM_TABLE_PREFIX]mod_security_groups
				)
			" />
			<MOD_TRIVIA_THEME label="Theme" default="trivia" />
			<MOD_TRIVIA_QUESTION_PER_LEVEL extended_type="Number" label="Number of Question for each Level" default="16" />
		</trivia-general>
		
		<trivia-setting label="trivia-setting">
			<MOD_TRIVIA_MIN_ANSWER_PER_QUESTION extended_type="Number" label="Min number of answer each question" default="4" />
			<MOD_TRIVIA_MAX_ANSWER_PER_QUESTION extended_type="Number" label="Max number of answer each question" default="4" />
			<MOD_TRIVIA_QUESTION_PER_STEP extended_type="Number" label="Number of Question for each Step" default="4" />
			<MOD_TRIVIA_TIME_PER_MAX_POINT extended_type="Number" label="Time for Max points for right answer" default="10" />
			<MOD_TRIVIA_TIME_PER_MIDDLE_POINT extended_type="Number" label="Time for middle points for right answer" default="30" />
			<MOD_TRIVIA_MAX_POINT_PER_RIGHT_ANSWER extended_type="Number" label="Max points for right answer" default="20" />
			<MOD_TRIVIA_MIDDLE_POINT_PER_RIGHT_ANSWER extended_type="Number" label="Middle points for right answer" default="15" />
			<MOD_TRIVIA_MIN_POINT_PER_RIGHT_ANSWER extended_type="Number" label="Min points for right answer" default="10" />
		</trivia-setting>
		
		<trivia-achievement label="trivia-achievement"> 
			<MOD_TRIVIA_ACHIEVEMENT_SCOUT extended_type="Number" label="Answer for 'scout'" default="40" />
			<MOD_TRIVIA_ACHIEVEMENT_ESPLORATORE extended_type="Number" label="Answer for 'esploratore'" default="120" />
			<MOD_TRIVIA_ACHIEVEMENT_SERIE_VINCENTE1 extended_type="Number" label="Answer for 'serie vincente 1'" default="5" />
			<MOD_TRIVIA_ACHIEVEMENT_SERIE_VINCENTE2 extended_type="Number" label="Answer for 'serie vincente 2'" default="10" />
			<MOD_TRIVIA_ACHIEVEMENT_SERIE_VINCENTE3 extended_type="Number" label="Answer for 'serie vincente 3'" default="20" />
		</trivia-achievement>
	</settings>
